<h1>Extras</h1>
<% extras_frame_id = dom_id(order, "extras") %>
<%= turbo_frame_tag extras_frame_id, data: { turbo_frame: extras_frame_id } do %>
  <%= form_with(model: order) do |form| %>
    <% if order.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

        <ul>
          <% order.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <% Order::EXTRAS.each do |extra| %>
      <br />
      <%= form.check_box :extras, {multiple: true}, extra, false %>
      <%= form.label extra %>
    <% end %>
    <%= form.submit "Continue Order" %>
  <% end %>
<% end %>
